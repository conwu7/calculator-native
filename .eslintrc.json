{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "prettier",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": ["react", "prettier"],
    "rules": {
        "import/no-unresolved": 0,
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "all",
                "tabWidth": 2,
                "semi": false,
                "singleQuote": false,
                "bracketSpacing": true,
                "arrowParens": "avoid",
                "endOfLine": "auto"
            }
        ],
        "react/prop-types": 0
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
